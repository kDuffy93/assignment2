<% include ../../partials/header.ejs %>

<main class="container">

<h1>Edit Existing Course</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="course" class="col-sm-2 control-label">course Name: </label>
        <input name="course" id="course" required value="<%= course.coursename %>" />
    </div>

  

    <div class="form-group">
        <label for="courseTypes" class="col-sm-2 control-label">Course Type: </label>
        <select name="courseTypes" id="courseType" >

             <!--  select dropdown   -->
<% for (var i = 0; i < courseTypes.length; i++) { %>
<% if(courseTypes[i].coursetype == selectedTypeName){ %>
<option selected="selected" value="<%= courseTypes[i].coursetype%>"> 
         <%= courseTypes[i].coursetype%>
       </option>
 <% } %>
<% if(courseTypes[i].coursetype != selectedTypeName ){ %>
<option  value="<%= courseTypes[i].coursetype%>"> 
         <%= courseTypes[i].coursetype%>
       </option>
 <% } %>

 <% } %>
 
 </select>
</div>
<div class="form-group"> 
<label for="certicon" class="col-sm-2 control-label">Choose an Icon for this certification</label>
         <input id="certicon" type="file" name="certicon" accept="image/*">
  </div>


    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>



<%include ../../partials/footer.ejs%>