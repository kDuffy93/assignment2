<% include ../../partials/header.ejs %>

<main class="container">

<h1>Edit Existing Certification</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="course" class=" control-label">Certification Name: </label>
        <input name="course" id="course" required value="<%= course.coursename %>" />
    </div>
    <div class="form-group">
        <label for="expires" class=" control-label">expires? </label>
        <% if(expires = on){ %>
        <input type="checkbox" name="expires" id="expires" checked/>
        <% } %>
        <% else (expires = false){ %>
<input type="checkbox" name="expires" id="expires"/>
            <% } %>
    </div>


    <div class="form-group">
        <label for="courseTypes" class=" control-label">Certification Type: </label>
        <select name="courseTypes" id="courseType" >

             <!--  select dropdown   -->
<% for (var i = 0; i < courseTypes.length; i++) { %>
<% if(courseTypes[i].coursetype == selectedTypeName){ %>
<option selected="selected" value="<%= courseTypes[i].coursetype%>">
         <%= courseTypes[i].coursetype%>
       </option>
 <% } %>
<% if(courseTypes[i].coursetype != selectedTypeName ){ %>
<option  value="<%= courseTypes[i].coursetype%>">
         <%= courseTypes[i].coursetype%>
       </option>
 <% } %>

 <% } %>

 </select>
</div>
<div class="form-group">
<label for="certicon" class=" control-label">Choose an icon for this Certification</label>
         <input id="certicon" type="file" name="certicon" accept="image/*">
  </div>


    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>



<%include ../../partials/footer.ejs%>
