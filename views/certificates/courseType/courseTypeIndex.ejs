<% include ../../partials/header.ejs %>

<div class="container-fluid" style="margin-top:50px;">

<a href="courseType/add" class="btn btn-success" style="margin-bottom:10px;">Add a New Certification</a>
<table class="table table-inverse table-hover">
    <tr><th>Certification Type</th><th>Edit</th><th>Delete</th></tr>

    <% for (var i = 0; i < courseTypes.length; i++) { %>
        <tr>
            <td><%= courseTypes[i].coursetype %></td>
            <td><a href="courseType/<%= courseTypes[i]._id %>" class="btn btn-info">Edit</a></td>
            <td><a href="courseType/delete/<%= courseTypes[i]._id %>" class="btn btn-danger confirmation">Delete</a></td>
        </tr>
    <% } %>

</table>
</div>
<%include ../../partials/footer.ejs%>