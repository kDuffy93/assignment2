<% include ../../partials/header.ejs %>
<div class="container-fluid" style="margin-top:50px;">

<a href="department/add" class="btn btn-success" style="margin-bottom:10px;">Add a New Department</a>
<table class="table table-inverse table-hover">
    <tr><th>Department</th><th>Edit</th><th>Delete</th></tr>
 <!--  logic to populate the  table  -->
    <% for (var i = 0; i < departments.length; i++) { %>
        <tr>
            <td><%= departments[i].departmentname %></td>
            <td><a href="department/<%= departments[i]._id %>" class="btn btn-info">Edit</a></td>
            <td><a href="department/delete/<%= departments[i]._id %>" class="btn btn-danger confirmation">Delete</a></td>
        </tr>
    <% } %>

</table>
</div>
<%include ../../partials/footer.ejs%>
